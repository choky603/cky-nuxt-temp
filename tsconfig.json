{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["@nuxt/types", "@nuxtjs/axios", "@types/node", "vuetify-dialog/types"]
  },
  "include": ["pages/**/*.vue", "plugins/**/*.ts", "store/**/*.ts", "utils/**/*.ts"],
  "exclude": ["node_modules", ".nuxt", "dist"],
  "files": ["types/vue-shim.d.ts"]
}
